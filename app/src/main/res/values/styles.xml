<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MainActivityAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="UserFieldContainer">
        <item name="android:weightSum">1</item>
        <item name="android:paddingLeft">@dimen/user_field_left</item>
        <item name="android:paddingRight">@dimen/user_field_left</item>
        <item name="android:paddingTop">@dimen/user_field_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="UserFieldText">
        <item name="android:autoLink">all</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="UserFieldIcon">
        <item name="android:paddingRight">@dimen/user_field_icon_padding</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:tint">#333</item>
    </style>
    <style name="TextViewSection">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
